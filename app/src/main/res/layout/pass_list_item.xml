<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image"
        android:contentDescription="@string/key_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/key_icon" />

    <TextView
        android:id="@+id/domain_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/copy_but"
        android:layout_toEndOf="@+id/image"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/url_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/domain_list_item"
        android:layout_toStartOf="@+id/copy_but"
        android:textColor="@android:color/darker_gray"
        android:layout_toEndOf="@+id/image"
        android:textSize="14sp" />


    <Button
        android:id="@+id/copy_but"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_copy_icon"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/url_list_item"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>