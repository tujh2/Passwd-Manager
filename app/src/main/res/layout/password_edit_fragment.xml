<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/domain_label"
        android:text="Domain:"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/domain_edit"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/domain_label"
        android:hint="Domain"
        />

    <TextView
        android:id="@+id/username_label"
        android:layout_below="@id/domain_edit"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: " />

    <EditText
        android:textSize="24dp"
        android:id="@+id/username_edit"
        android:layout_below="@+id/username_label"
        android:hint="@string/username_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:id="@+id/url_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL: "
        android:layout_below="@+id/username_edit"/>
    <EditText
        android:id="@+id/url_edit"
        android:textSize="24dp"
        android:hint="Url"
        android:layout_below="@+id/url_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/password_label"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:layout_below="@+id/url_edit"/>
    <EditText
        android:layout_below="@+id/password_label"
        android:textSize="24dp"
        android:id="@+id/password_edit"
        android:hint="Password"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Save"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>